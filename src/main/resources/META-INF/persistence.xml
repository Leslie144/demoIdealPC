<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="demoIdealPC"
		transaction-type="JTA">

  
		<jta-data-source>java:/IdealPCbd</jta-data-source>

		<class>pe.edu.upc.entities.TipoUsuarioEntities</class>
		<class>pe.edu.upc.entities.TipoUAEntities</class>
		<class>pe.edu.upc.entities.TipoRecomendacionEntities</class>
		<class>pe.edu.upc.entities.DistritoEntities</class>
		<class>pe.edu.upc.entities.MarcaEntities</class>
		<class>pe.edu.upc.entities.TamanoMBEntities</class>
		<class>pe.edu.upc.entities.Tienda</class>
		<class>pe.edu.upc.entities.TipoModularEntities</class>
		<class>pe.edu.upc.entities.TipoPanelEntities</class>
		<class>pe.edu.upc.entities.Usuario</class>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="create" />
		</properties>
	</persistence-unit>
</persistence>
